@model List<FaturaKalemListView>
@{
    ViewData["Title"] = "BillDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Bill Serial Number @ViewBag.serial </li>
</ol>

<table class="table table-hover">
    <tr>
       
        <th>
            Description
        </th>
        <th>
           Quantity
        </th>
        <th>
           Price
        </th>

        <th>
            Total
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>@item.Desciription</td>
            <td>@item.Quantity</td>
            <td>@item.BirimFiyat</td>
            <td>@item.Tutar</td>

        </tr>
    }

</table>
<a asp-action="AddInvoice" asp-route-id="@ViewBag.dnm" class="btn btn-default" style="background-color:brown">new invoice item entry</a>



