@model List<SellingMovesListView>
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.perconel</li>
</ol>

@if (Model.Count() != 0)
{
    <table class="table table-hover">
        <tr>

            <th>
                Product Name

            </th>
            <th>
                current Name

            </th>
            <th>
                Price
            </th>
            <th>
                Total Price
            </th>

            <th>Date</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Products.ProductName</td>
                <td>@item.Cariler.Name @item.Cariler.Surname</td>
                <td>@item.Price</td>
                <td>@item.TotalPrice</td>
                <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>

            </tr>
        }

    </table>
}
   @{ 

       else
       {
           <p class="lead text-danger text-center">Kayıt Bulunamadı</p>
       }
   }


