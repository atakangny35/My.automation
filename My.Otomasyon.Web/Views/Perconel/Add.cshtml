@model PerconelAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Add" method="post" class="w-75 mt-2 mx-auto shadow">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-warning"></span>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <span asp-validation-for="Surname" class="text-warning"></span>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-warning"></span>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-warning"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-warning"></span>
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <span asp-validation-for="City" class="text-warning"></span>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    
    
    <div class="form-group">
        <label asp-for="DepartmanId"></label>
        <span asp-validation-for="DepartmanId" class="text-warning"></span>
        <select asp-for="DepartmanId" asp-items="(List<SelectListItem>)ViewBag.Departman" class="form-control">
        </select>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <button type="submit" class="btn btn-info">Save</button>

</form>

