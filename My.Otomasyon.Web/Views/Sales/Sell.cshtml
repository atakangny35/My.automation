@model SellingMovesAddViewModel
@{
    ViewData["Title"] = "Sell";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Sell" asp-controller="Sales" method="post" class="w-75 mt-2 mx-auto ">
    <div class="form-group">
        <label asp-for="Price"></label>
        <span asp-validation-for="Price" class="text-warning"></span>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adet"></label>
        <span asp-validation-for="Adet" class="text-warning"></span>
        <input type="text" asp-for="Adet" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date" class="text-warning"></span>
        <input type="date" asp-for="Date" class="form-control" />
    </div>
    <input type="hidden" asp-for="ProductId"  value="@ViewBag.Product" />
    <div class="form-group">
        <label asp-for="AppUserId"></label>
        <span asp-validation-for="AppUserId" class="text-warning"></span>
        <select asp-for="AppUserId" asp-items="(List<SelectListItem>)ViewBag.current" class="form-control">
        </select>
    </div>

    <div asp-validation-summary="ModelOnly"></div>
  
    <button type="submit" class="btn btn-info">Save</button>


</form>

