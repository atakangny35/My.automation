@model DepartmanAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="Add" method="post" class="w-75 mx-auto mt-2">
    <div class="form-group">
        <label asp-for="DepartmanAd"></label>
        <span asp-validation-for="DepartmanAd" class="text-warning"></span>
        <input type="text" asp-for="DepartmanAd" value="@Model.DepartmanAd" class="form-control" />
    </div>

    <button type="submit" class="btn btn-info">Save</button>
</form>


